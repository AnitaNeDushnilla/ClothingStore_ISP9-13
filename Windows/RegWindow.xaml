<Window x:Class="ClothingStore_ISP9_13.Windows.RegWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClothingStore_ISP9_13.Windows"
        mc:Ignorable="d"
        Title="RegWindow" Height="720" Width="420"
        WindowStartupLocation="CenterScreen" WindowStyle="ToolWindow">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FFDCD2BA" Offset="0"/>
                <GradientStop Color="#FFE3D6CC" Offset="0.69"/>
            </LinearGradientBrush>
        </Grid.Background>
        <StackPanel>
            <TextBlock x:Name="textBlock" 
                   HorizontalAlignment="Center"            
                   TextWrapping="Wrap" 
                   Text="Регистрация" 
                   FontSize="25"
                   />
            <WrapPanel>
                <TextBox x:Name="tbLogin"
                    Width="250" 
                    Height="30"
                    Margin="10, 30"/>

                <TextBlock Width="100" Height="30" 
                           Text="Логин*" Margin="10, 30"/>

                <PasswordBox x:Name="pbPass"
                    Width="250" 
                             Height="30"
                    Margin="10, 30"/>

                <TextBlock Width="100" Height="30" 
                           Text="Пароль*" Margin="10, 30"/>

                <TextBox x:Name="tbFirstName"
                    Width="250" 
                    Height="30"
                    Margin="10, 30"/>

                <TextBlock Width="100" Height="30" 
                           Text="Ваше имя*" Margin="10, 30"/>
                <TextBox x:Name="tbLastName"
                    Width="250" 
                    Height="30"
                    Margin="10, 30"/>

                <TextBlock Width="100" Height="30" 
                           Text="Ваша фамилия*" Margin="10, 30"/>
                <TextBox x:Name="tbPhone"
                    Width="250"
                    Height="30"
                    Margin="10, 30"/>

                <TextBlock Width="100" Height="30" 
                           Text="Телефон*" Margin="10, 30"/>
                <TextBox x:Name="tbEmail"
                    Width="250"
                    Height="30"
                    Margin="10, 30"/>

                <TextBlock Width="100" Height="30" 
                           Text="Почта" Margin="10, 30"/>
            </WrapPanel>

            <TextBlock 
                Text="*- поле обязательно для заполнения"
                HorizontalAlignment="Left"
                Margin="10, 0"/>

            <Button x:Name="btnReg"
                Width="120"
                Height="30"
                Content="Зарегистрироваться" 
                Background="#FFD4BCA5" 
                Margin="10"/>

            <Button x:Name="btnEnter"
                Width="150"
                Height="30"
                Content="Уже зарегистрированы?" 
                Background="{x:Null}"
                Click="btnEnter_Click" />

        </StackPanel>
    </Grid>
</Window>
